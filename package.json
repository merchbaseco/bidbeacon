{
  "name": "@bidbeacon/server",
  "version": "1.0.0",
  "description": "Docker-deployable API service for BidBeacon",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "vite build",
    "start": "dotenv -e .env node dist/index.js",
    "start:worker": "dotenv -e .env node dist/worker.js",
    "deploy": "./scripts/deploy-stack.sh",
    "logs": "./scripts/commands.sh logs",
    "status": "./scripts/commands.sh status",
    "restart": "./scripts/commands.sh restart",
    "stop": "./scripts/commands.sh stop",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "worker": "dotenv -e .env tsx src/worker/index.ts",
    "peek-dlq": "tsx scripts/peek-dlq.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "bottleneck": "^2.19.5",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.5.0",
    "postgres": "^3.4.7",
    "tslib": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.3.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}
